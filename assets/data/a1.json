          ],
          "examples": [
            { "sv": "en stor bil", "fr": "une grande voiture", "pron": "èn stour biil" },
            { "sv": "ett stort hus", "fr": "une grande maison", "pron": "ètt stourt houss" },
            { "sv": "stora hus", "fr": "de grandes maisons", "pron": "stou-ra houss" }
          ],
          "quiz": {
            "type": "gap",
            "q": "Complète : ett ___ hus. (une grande maison)",
            "answer": "stort"
          }
        },
        {
          "id": "a1_adj_2",
          "title": "liten/litet/små (exception très utile)",
          "content": [
            "Exception fréquente :",
            "en liten bil (petite voiture)",
            "ett litet hus (petite maison)",
            "små hus (petites maisons)."
          ],
          "examples": [
            { "sv": "en liten bil", "fr": "une petite voiture", "pron": "èn lii-ten biil" },
